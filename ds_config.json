  "steps_per_print": 1,
  "train_batch_size": "auto",
  "train_micro_batch_size_per_gpu": "auto",
  "wall_clock_breakdown": false,

  "communication_options": {
    "port": 30518,
    "rendezvous_port": 30538
  },
  
  "data_efficiency": {
    "data_parallel_random_init": true
  }
